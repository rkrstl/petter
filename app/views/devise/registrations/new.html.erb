<%= render "shared/header" %>

<h2 class="registratins-title">Sign up</h2>


<div class="registrations-all">
<div class="registrations-contents">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>




    <div class='field'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
      <%= f.text_field :nickname, class:"input-default", id:"nickname dph",maxlength:"20" ,class:"d-ph"%>
    </div>



  <div class="field">
    <label>email</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email ",class:"d-ph" %>
  </div>

  <div class="field">
    <label>password</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password " ,class:"d-ph"%>
  </div>

  <div class="field">
    <label>email confirmation<label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"d-ph" %>
  </div>


    <div class='field'>
      <label>生年月日</label>
      <span class="indispensable">必須</span>
    
      <%= raw sprintf(
                  f.date_select(
                    :birth,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>"%>
    </div>



  <div class="field">
    <%= f.submit "Sign up",class:"submit" %>
  </div>


<% end %>

</div>

<%= render "devise/shared/links" %>

</div>
