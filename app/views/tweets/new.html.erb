<%= render "shared/header" %>


<div class="tweets-content">
<div class="tweets">
  <%= form_with(model:@tweet,local:true) do |f| %>


  <h3 class="tweet-title t">新規投稿</h3>

   <div class="tweet-click-upload t">
        <%= f.file_field :image %>
  </div>
      

   <div class="tweet-title t">
      <%=f.text_field :title,placeholder:"タイトル",class:"title-ph"%>
   </div>

   <div class="tweet-text t">
      <%=f.text_area :text,placeholder:"今日はお散歩したよ",rows:"10",class:"text-ph"%>
   </div>

   <div class="tweet-submit t">
      <%= f.submit "投稿" ,class:"submit "%>
   </div>

    <div class="tweet-return t"> 
     <%=link_to 'もどる', root_path, class:"back-btn" %>
   </div>

 <%end%>

</div>

</div>