<%= render "shared/header" %>

<div class="tweet">
  <%= form_with(model:@tweet,local:true) do |f| %>

  <h3>新規投稿</h3>

 <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image %>
      </div>


      <%=f.text_field :title,placeholder:"タイトル"%>
      <%=f.text_area :text,placeholder:"今日はお散歩したよ"%>
      <%= f.submit "投稿"%>
      <%=link_to 'もどる', root_path, class:"back-btn" %>


 <%end%>

</div>