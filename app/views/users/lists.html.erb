<%= render "shared/header" %>


<div class="lists-all">

<div class="lists-user">
  <% @pets.each do |pet|%>
    <div class="lists-user-individual">
      <% if pet.image.attached? %>
        <%=image_tag pet.image, class:"lists-icon"%>
        <%else%>
        <%=image_tag 'default.jpg',class:"lists-icon"%>
      <%end%>
      <div>user name : <%=link_to pet.pet_name,detail_user_path(pet)%></div>
    
      
    <div> pet name: <%= pet.pet_name%></div>
     <div>bleed : <%= pet.bleed.name%></div>
     

    </div>
    <%end%>

</div>


</div>